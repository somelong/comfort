                <a class="navbar-brand" href="/activitytrademark.do">品牌</a>
            </div>
        </div>
    </div>

    <!--content1-->
    <div class="row text-center content1">
        <% var num=1 %>   <!--用于循环单数执行还是双数执行-->
        <%for(var i=0;i<hphsData.length;i+=2){
            num++;%>
            <%if((num%2)==0){%>
            <a href="#">
                <div class="col-md-6 col-sm-6 col-xs-12 img-left text-left content3-left">
                    <!--<img src="../public/images/p" class="img-responsive" alt="">-->
                    <img src="<%=hphsData[i].ps_img%>" class="img-responsive" alt="">
                    <div class="zhe"></div>
                    <div class=" col-lg-12">
                        <h4><%=hphsData[i].ps_zt%></h4>
                        <p><%=hphsData[i].ps_ft%></p>
                        <!--<div class="col-md-3 text-type"><p class="btn-info text-center"><%=hphsData[i].ac_type%></p></div>-->
                    </div>
                </div>
            </a>
            <%} else if((num%2)==1){%>
            <a href="#">
                <div class="col-md-6 col-sm-6 col-xs-12 img-left text-left content3-left">
                    <!--<img src="../public/images/p" class="img-responsive" alt="">-->
                    <img src="<%=hphsData[i].ps_img%>" class="img-responsive" alt="">
                    <div class="zhe"></div>
                    <div class=" col-lg-12">
                        <h4><%=hphsData[i].ps_zt%></h4>
                        <p><%=hphsData[i].ps_ft%></p>
                        <!--<div class="col-md-3 text-type"><p class="btn-info text-center"><%=hphsData[i].ps_type%></p></div>-->
                    </div>
                </div>
            </a>
            <%}%>

        <%}%>
    </div>
    <!--序列号-->
    <!--<div class="row numDiv">-->
        <!--<div class="col-md-offset-4 col-md-4 btn-num">-->
            <!--<div class="num">1</div>-->
            <!--<div class="num">1</div>-->
            <!--<div class="num">2</div>-->
            <!--<div class="num">3</div>-->
            <!--<div class="num">4</div>-->
            <!--<div class="num">更多</div>-->
        <!--</div>-->
    <!--</div>-->
</div>

<!--尾部-->
<%-include("common/footer.ejs")%>
<script src="../js/jquery-3.2.1.js"></script>
<script src="../bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
<script src="../js/nav/nav1.js"></script>
<script>
    $(".content3-left").addClass("animated fadeInLeft");
    $(".content3-right").addClass("animated fadeInRight");
    $(window).scroll(function () {
        console.log($(window).scrollTop());
        if($(window).scrollTop()>=50){
            $(".content3-11").addClass("animated fadeInLeft");
            $(".content3-12").addClass("animated fadeInRight");
        }
        if($(window).scrollTop()>=400){
            $(".content3-21").addClass("animated fadeInLeft");
            $(".content3-22").addClass("animated fadeInRight");
        }
        if($(window).scrollTop()>=1000){
            $(".content3-31").addClass("animated fadeInLeft");
            $(".content3-32").addClass("animated fadeInRight");
        }
    });
</script>
</body>
</html>